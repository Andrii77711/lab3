<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab3_1.EditStudentPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <StackLayout Padding="30">
            <Entry Text="{Binding Name}" Placeholder="Name"/>
            <Entry Text="{Binding Age}" Placeholder="Age" Keyboard="Numeric"/>
            <Entry Text="{Binding Course}" Placeholder="Course"/>
            <Button Text="Save" Clicked="SaveStudent"/>
            <Button Text="Cancel" Clicked="CancelEdit"/>
        </StackLayout>
    </VerticalStackLayout>
    
    
</ContentPage>